<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp">

            <Button
                android:id="@+id/btnSearchDevice"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="ðŸ” Buscar Dispositivo"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@color/button_text_inverted"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <ListView
                android:id="@+id/listViewFoundDevices"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/hint_gray"
                android:layout_marginBottom="16dp"
                android:divider="@color/black"
                android:dividerHeight="1dp"
                android:padding="8dp"
                android:elevation="2dp" />

            <EditText
                android:id="@+id/editTextDeviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“› Nombre del Dispositivo"
                android:padding="12dp"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/black"
                android:backgroundTint="@color/background_highlight"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/editbox_background" />

            <EditText
                android:id="@+id/editTextDeviceLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ðŸ“ UbicaciÃ³n"
                android:padding="12dp"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/black"
                android:backgroundTint="@color/background_light"
                android:background="@android:drawable/editbox_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnAccept"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ… Aceptar"
                    android:backgroundTint="@color/accent_blue"
                    android:textColor="@color/button_text_inverted"
                    android:textStyle="bold"
                    android:elevation="4dp" />

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ”™ Regresar"
                    android:backgroundTint="@color/accent_blue"
                    android:textColor="@color/button_text_inverted"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:elevation="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
